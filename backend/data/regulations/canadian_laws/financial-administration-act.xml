<?xml version="1.0" encoding="UTF-8"?>
<Consolidation>
  <Identification>
    <Chapter>R.S.C. 1985, c. F-11</Chapter>
    <TitleText>Financial Administration Act</TitleText>
    <EnabledDate>2024-01-01</EnabledDate>
    <ConsolidationDate>2025-11-25</ConsolidationDate>
  </Identification>
  <Body>
    <Part id="I">
      <Number>I</Number>
      <Heading>General Provisions</Heading>
      <Section id="1">
        <Number>1</Number>
        <Heading>Short Title</Heading>
        <Subsection id="1-1">
          <Number>1</Number>
          <Text>This Act may be cited as the Financial Administration Act.</Text>
        </Subsection>
      </Section>
      <Section id="2">
        <Number>2</Number>
        <Heading>Definitions</Heading>
        <Subsection id="2-1">
          <Number>1</Number>
          <Text>In this Act, the definitions in this section apply.</Text>
        </Subsection>
      </Section>
      <Section id="3">
        <Number>3</Number>
        <Heading>Application</Heading>
        <Subsection id="3-1">
          <Number>1</Number>
          <Text>This Act applies to all persons subject to Canadian law as specified in Section 2.</Text>
        </Subsection>
        <Subsection id="3-2">
          <Number>2</Number>
          <Text>The provisions of this Act are subject to s. 3(1) and other applicable regulations.</Text>
        </Subsection>
      </Section>
    </Part>
  </Body>
  <Amendments>
